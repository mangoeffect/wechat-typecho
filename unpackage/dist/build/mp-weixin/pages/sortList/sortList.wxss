.top {
	width: 700rpx;
	height: 200rpx;
	background-color: #6739b6;
	-webkit-border-radius: 20rpx;
	border-radius: 20rpx;
	margin: 25rpx;
	text-align: center;
	line-height: 200rpx;
	color: #fff;
	font-size: 40rpx;
	font-weight: 700
}

.article_list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	flex-wrap: wrap
}

.article_list .article {
	margin: 27.5rpx;
	width: 320rpx;
	-webkit-box-shadow: 0 0 10rpx #e1e1e1;
	box-shadow: 0 0 10rpx #e1e1e1;
	-webkit-border-radius: 20rpx;
	border-radius: 20rpx
}

.article_list .article .thumb {
	width: 320rpx;
	height: 150rpx;
	-webkit-border-radius: 20rpx 20rpx 0 0;
	border-radius: 20rpx 20rpx 0 0
}

.article_list .article .title {
	width: 310rpx;
	font-size: 30rpx;
	line-height: 50rpx;
	margin: 10rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	height: 50rpx;
	font-weight: 700
}

.article_list .article .des {
	margin: 15rpx;
	height: 80rpx;
	font-size: 26rpx;
	line-height: 40rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	-webkit-box-orient: vertical
}

.article_list .article .shuju {
	position: relative;
	bottom: -10rpx
}

.article_list .article .views {
	width: 100rpx;
	margin: 5rpx;
	color: #d0d0d0;
	font-size: 24rpx
}

.article_list .article .comments {
	width: 100rpx;
	margin: 5rpx;
	color: #d0d0d0;
	font-size: 24rpx
}

.article_list .article .likes {
	width: 100rpx;
	margin: 5rpx;
	color: #d0d0d0;
	font-size: 24rpx
}
