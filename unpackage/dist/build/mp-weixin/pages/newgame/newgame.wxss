page {
	padding-top: 30rpx
}

.card {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 700rpx;
	margin: 30rpx 25rpx;
	-webkit-box-shadow: 0 0 100rpx #ececec;
	box-shadow: 0 0 100rpx #ececec;
	padding: 10rpx;
	-webkit-border-radius: 20rpx;
	border-radius: 20rpx
}

.card image {
	width: 100rpx;
	-webkit-border-radius: 20rpx;
	border-radius: 20rpx;
	margin-left: 20rpx
}

.card .name {
	line-height: 100rpx;
	font-size: 30rpx;
	margin-left: 30rpx
}

.copyright {
	position: absolute;
	width: 750rpx;
	text-align: center;
	bottom: 10rpx;
	color: #a1a1a1
}
