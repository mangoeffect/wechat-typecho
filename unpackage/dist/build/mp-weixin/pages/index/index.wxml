<view>
	<view class="haibao">
		<swiper class="swiper" circular="{{true}}" autoplay="{{true}}" duration="{{1000}}">
			<block wx:for="{{haiBao}}" wx:for-item="item" wx:for-index="index" wx:key="index">
				<swiper-item data-event-opts="{{[['tap',[['goDetails',['$0'],[[['haiBao','',index,'cid']]]]]]]}}" bindtap="__e">
					<image src="{{item.thumb[0].str_value}}" mode="aspectFill"></image>
				</swiper-item>
			</block>
		</swiper>
	</view>
	<view class="cu-bar">
		<view class="action"><text class="cuIcon-newfill text-orange"></text><text class="text-xl text-bold">热门分类</text></view>
	</view>
	<scroll-view class="sort_list" scroll-x="true">
		<block wx:for="{{sortList}}" wx:for-item="item" wx:for-index="index" wx:key="index">
			<view data-event-opts="{{[['tap',[['goSortList',['$0','$1'],[[['sortList','',index,'mid']],[['sortList','',index,'name']]]]]]]}}"
			 class="sort" bindtap="__e">
				<image src="{{item.thumb}}" mode="widthFix"></image>
				<view class="name">{{item.name}}</view>
			</view>
		</block>
	</scroll-view>
	<view class="notice">
		<image src="../../static/gg.png"></image>
		<swiper class="notice_c" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}" vertical="{{true}}" circular="{{true}}">
			<block wx:for="{{recommend}}" wx:for-item="item" wx:for-index="index" wx:key="index">
				<swiper-item data-event-opts="{{[['tap',[['goDetails',['$0'],[[['recommend','',index,'cid']]]]]]]}}" bindtap="__e">
					<view>{{item.title}}</view>
				</swiper-item>
			</block>
		</swiper>
	</view>
	<view class="cu-bar">
		<view class="action"><text class="cuIcon-hotfill text-red"></text><text class="text-xl text-bold">热门文章</text></view>
	</view>
	<view class="article_list">
		<block wx:for="{{articleList}}" wx:for-item="item" wx:for-index="index" wx:key="index">
			<view>
				<block wx:if="{{item.style[0].str_value=='1'}}">
					<view data-event-opts="{{[['tap',[['goDetails',['$0'],[[['articleList','',index,'cid']]]]]]]}}" class="article1"
					 bindtap="__e">
						<view class="flex">
							<view class="title">{{item.title}}</view>
							<image class="thumb" src="{{item.thumb[0].str_value}}" mode="widthFix"></image>
						</view>
						<view class="flex margin-top text-gray">
							<view class="author">{{item.author}}</view>
							<view class="times">{{item.month+'月'+item.day+'日'}}</view>
							<view style="margin-left:auto;"><text class="cuIcon-more"></text></view>
						</view>
					</view>
				</block>
				<block wx:if="{{item.style[0].str_value=='2'}}">
					<view data-event-opts="{{[['tap',[['goDetails',['$0'],[[['articleList','',index,'cid']]]]]]]}}" class="article2"
					 bindtap="__e">
						<view class="flex">
							<image class="thumb" src="{{item.thumb[0].str_value}}" mode="widthFix"></image>
							<view class="title">{{item.title}}</view>
						</view>
						<view class="flex margin-top text-gray">
							<view class="author">{{item.author}}</view>
							<view class="times">{{item.month+'月'+item.day+'日'}}</view>
							<view style="margin-left:auto;"><text class="cuIcon-more"></text></view>
						</view>
					</view>
				</block>
				<block wx:if="{{item.style[0].str_value=='3'}}">
					<view data-event-opts="{{[['tap',[['goDetails',['$0'],[[['articleList','',index,'cid']]]]]]]}}" class="article3"
					 bindtap="__e">
						<image class="thumb" src="{{item.thumb[0].str_value}}" mode="widthFix"></image>
						<view class="title">{{item.title}}</view>
						<view class="flex text-gray">
							<view class="author">{{item.author}}</view>
							<view class="times">{{item.month+'月'+item.day+'日'}}</view>
							<view style="margin-left:auto;margin-right:20rpx;"><text class="cuIcon-more"></text></view>
						</view>
					</view>
				</block>
				<block wx:if="{{item.style[0].str_value=='4'}}">
					<view data-event-opts="{{[['tap',[['goDetails',['$0'],[[['articleList','',index,'cid']]]]]]]}}" class="article4"
					 bindtap="__e">
						<view class="title">{{item.title}}</view>
						<view class="article_dec">{{item.description[0].str_value}}</view>
						<view class="des">
							<view class="author">{{item.author}}</view>
							<view style="margin-left:auto;margin-right:20rpx;"><text class="cuIcon-more margin-left-xs"></text></view>
						</view>
					</view>
				</block>
			</view>
		</block>
	</view>
</view>
